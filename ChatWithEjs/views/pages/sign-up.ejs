<html>

    <head>
        <%include ../partials/head %>
    </head>

</body>
<%include ../partials/header %>

<div class="container">
    <div class="card card-container">

        <img id="profile-img" class="profile-img-card" src="img/avatar_2x.png" />
        <p id="profile-name" class="profile-name-card"></p>
        <form id ="signup" class="form-signin signup" method="post" action="user/signup">
            <!--        <form id ="signup" class="form-signin" method="post" action="user/signup"> -->
            <span id="reauth-email" class="reauth-email"></span>
            <div>
                <input type="text" id="name" name="name" class="form-control" placeholder="Enter your name" required autofocus>
            </div>
            <div>
                <input type="text" id="lname" name="lname" class="form-control" placeholder="Enter your last" required autofocus>
            </div>
            <div>
                <input type="email" id="email" name="email" class="form-control" placeholder="Email address" required autofocus>
            </div>
            <div>
                <input type="password" id="pwd" name="pwd" class="form-control" placeholder="Password" required>
            </div>
            <div>
                <input type="password" id="conformPwd" name="conformPwd" class="form-control" placeholder="Conform Password" required>
            </div>
            <div>
                <input type="text" id="mobile" name="mobile" class="form-control" placeholder="Enter mobile number">
            </div>
            <button class="btn btn-lg btn-warning btn-block btn-signin" type="submit">Sign Up</button>
        </form><!-- /form -->
        <!--<div>
            <a href="#" class="forgot-password">
                Forgot the password?
            </a>
        </div>-->
        <a href="/" class="forgot-password">
            Sign in to your Account.
        </a>
        <% if (locals.messages) { %>
            <div><%= messages.msg %></div>
            <script language="javascript">
            alert("<%= messages.msg %>");
            </script>

        <% } %>
    </div><!-- /card-container -->
</div><!-- /container -->


<%include ../partials/footer %>


<script src="js/plugin/validation/jquery.validate.min.js" type="text/javascript"></script>
<script src="js/plugin/validation/additional-methods.min.js" type="text/javascript"></script>
<script src="custom-js/signup.js" type="text/javascript"></script>

</body>
</html>